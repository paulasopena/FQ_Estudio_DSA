<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_back_dif"
    tools:context=".activities.DashBoardActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi there, "
            android:textColor="@color/green_vibrant"
            android:fontFamily="@font/play_regular"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textAlignment="center">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_marginTop="70dp">
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:inputType="text"
            android:textStyle="bold"
            android:textColor="@color/green_vibrant"
            android:fontFamily="@font/play_regular"
            android:textSize="40sp"
            android:textAlignment="center"
            android:id="@+id/Edit_Title_Update"
            android:text="@string/updating_title"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:cardMaxElevation="5dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/cardview_back2"
                android:orientation="vertical"
                android:padding="15dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/profiles"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/user_profile_asset"
                        android:padding="8dp">

                    </ImageView>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/play_regular"
                    android:lines="1"
                    android:text="@string/your_profile"
                    android:textColor="@color/green_vibrant"
                    android:textStyle="bold"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/play_regular"
                    android:lines="1"
                    android:text="Acces to your profile!"
                    android:textColor="@color/green_vibrant"
                    android:textSize="15sp">

                </TextView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:cardMaxElevation="5dp"
            android:clickable="true"
            android:focusable="true"


            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/gadget_shop"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/cardview_back2"
                android:orientation="vertical"
                android:padding="15dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/gadgetCard"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gadget_shop_asset"
                        android:padding="8dp">

                    </ImageView>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/play_regular"
                    android:lines="1"
                    android:text="Gadget Shop"
                    android:textColor="@color/green_vibrant"
                    android:textStyle="bold"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/play_regular"
                    android:lines="1"
                    android:text="Buy some gadgets!"
                    android:textColor="@color/green_vibrant"
                    android:textSize="15sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="330dp">

        <androidx.cardview.widget.CardView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="5dp">

            <LinearLayout
                android:id="@+id/run_game"
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:background="@drawable/castillo"
                android:orientation="vertical"
                android:padding="15dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/play_symbol_asset"
                        android:padding="8dp">

                    </ImageView>



                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/play_bold"
                    android:lines="1"
                    android:text="START PLAYING"
                    android:textAlignment="center"
                    android:textColor="@color/green_vibrant"
                    android:textStyle="bold"
                    android:textSize="25sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/play_regular"
                    android:lines="1"
                    android:text="Can you save the witcher?"
                    android:textAlignment="center"
                    android:textColor="@color/green_vibrant"
                    android:textStyle="italic"
                    android:textSize="25sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/returnBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="680dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:fontFamily="@font/play_regular"
        android:onClick="logOut"
        android:text="â†"
        android:textColor="@color/green_vibrant"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp" />


</RelativeLayout>