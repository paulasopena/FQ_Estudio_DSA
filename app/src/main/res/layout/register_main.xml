<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity"
    android:background="@drawable/main_back_dif">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nameTxt"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:hint="Name"
        android:backgroundTint="@color/green_vibrant"
        android:fontFamily="@font/play_regular"
        android:shadowColor="@color/green_vibrant"
        android:textColor="@color/green_vibrant"
        android:textColorHint="@color/green_vibrant"
        app:layout_constraintBottom_toTopOf="@+id/surnameTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleRegister" />

    <Button
        android:id="@+id/doRegisterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:fontFamily="@font/play_regular"
        android:onClick="doRegister"
        android:text="REGISTER"
        android:textColor="@color/green_vibrant"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordRegisterTxt"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/returnRegisterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="returnFunction"
        android:text="â†"
        android:textStyle="bold"
        android:textSize="30dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:fontFamily="@font/play_regular"
        android:textColor="@color/green_vibrant"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="3dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/surnameTxt"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:hint="Surname"
        android:backgroundTint="@color/green_vibrant"
        android:shadowColor="@color/green_vibrant"
        android:textColor="@color/green_vibrant"
        android:textColorHint="@color/green_vibrant"
        android:fontFamily="@font/play_regular"
        app:layout_constraintBottom_toTopOf="@+id/birthdayTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTxt" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/emailTxt"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:hint="Email"
        android:backgroundTint="@color/green_vibrant"
        android:shadowColor="@color/green_vibrant"
        android:textColor="@color/green_vibrant"
        android:textColorHint="@color/green_vibrant"
        android:fontFamily="@font/play_regular"
        app:layout_constraintBottom_toTopOf="@+id/passwordRegisterTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthdayTxt" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordRegisterTxt"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:hint="Password"
        android:backgroundTint="@color/green_vibrant"
        android:shadowColor="@color/green_vibrant"
        android:textColor="@color/green_vibrant"
        android:textColorHint="@color/green_vibrant"
        android:fontFamily="@font/play_regular"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/doRegisterBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTxt" />

    <TextView
        android:id="@+id/titleRegister"
        android:layout_width="206dp"
        android:layout_height="53dp"
        android:fontFamily="@font/play_bold"
        android:text="REGISTER"
        android:textAlignment="center"
        android:textColor="@color/green_vibrant"
        android:textSize="43sp"
        app:layout_constraintBottom_toTopOf="@+id/nameTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/birthdayTxt"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:hint="Birthday"
        android:backgroundTint="@color/green_vibrant"
        android:textColorHint="@color/green_vibrant"
        android:fontFamily="@font/play_regular"
        app:layout_constraintBottom_toTopOf="@+id/emailTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surnameTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>